<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <fragment
      android:id="@+id/fragment_consumer"
      android:name="com.jskierbi.reactiveandroidsample.ui.bus.ConsumerFragment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:layout="@layout/fragment_consumer" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@android:color/black" />

  <Button
      android:id="@+id/btn_produce_str"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="produce str" />

  <Button
      android:id="@+id/btn_produce_producable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="produce producable" />

  <Button
      android:id="@+id/btn_clear_cached"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="clear cached" />

</LinearLayout>
